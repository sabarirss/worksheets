rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns this user document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is the parent of the child
    function isParent(parentUid) {
      return isAuthenticated() && request.auth.uid == parentUid;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection - public read for login flow, restricted write
    match /users/{userId} {
      // Allow public read for login username/email lookup
      allow read: if true;

      // Allow users to update their own profile OR admins to update any profile
      allow update: if isOwner(userId) || isAdmin();

      // Allow create if:
      // 1. User is creating their own account during signup (userId matches their auth.uid)
      // 2. OR user is an admin creating another user's account
      allow create: if isAuthenticated() && (
        // Self-registration during signup
        isOwner(userId) ||
        // Admin creating users
        isAdmin()
      );

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // Worksheets collection - any authenticated user can read/write
    // Document IDs embed the username so access is scoped by construction
    match /worksheets/{worksheetId} {
      allow read, write: if isAuthenticated();
    }

    // Children collection - parents can read/write, but level fields protected
    match /children/{childId} {
      // Allow parents to read their own children OR admins to read all children
      allow read: if isAuthenticated() && (
        resource.data.parent_uid == request.auth.uid ||
        isAdmin()
      );

      // Allow parents to create children under their account
      allow create: if isAuthenticated() &&
                      request.resource.data.parent_uid == request.auth.uid;

      // Allow parents to update their own children OR admins to update any
      // TODO: After CF deployment verified, restrict level/assessment fields:
      //   !request.resource.data.diff(resource.data).affectedKeys()
      //     .hasAny(['currentLevel', 'assessmentData', 'levelHistory'])
      allow update: if isAuthenticated() && (
        resource.data.parent_uid == request.auth.uid || isAdmin()
      );

      // Allow parents to delete their own children OR admins to delete any
      allow delete: if isAuthenticated() && (
        resource.data.parent_uid == request.auth.uid ||
        isAdmin()
      );
    }

    // Child sessions collection - for single-device enforcement
    match /child_sessions/{sessionId} {
      allow read, write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Completions collection - client can write until Cloud Functions verified
    // TODO: Lock down to "allow write: if false" after CF deployment verified
    match /completions/{completionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Weekly assignments collection - client can write until Cloud Functions verified
    // TODO: Lock down to "allow create, update: if false" after CF deployment verified
    match /weekly_assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Level tests collection - client can write until Cloud Functions verified
    // TODO: Lock down to "allow write: if false" after CF deployment verified
    match /level_tests/{testId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Feedback collection - parent feedback per module
    match /feedback/{feedbackId} {
      allow read, write: if isAuthenticated();
    }

    // Notifications collection - in-app notifications for children
    match /notifications/{notificationId} {
      allow read, create, update, delete: if isAuthenticated();
    }

    // Email log collection - dedup records for email reminders
    match /email_log/{logId} {
      allow read, create: if isAuthenticated();
      allow delete: if isAdmin();
    }
  }
}
